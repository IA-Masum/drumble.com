<%- include('../../partials/header.ejs') %>

<div style="min-height: 83vh" class="container py-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class="mb-3">Log In To Your Account</h4>
                <form action="/auth/login" method="POST">

                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="text" name="email" id="email"
                               class="form-control <%= errors.email && 'is-invalid' %>"
                        >
                        <div class="invalid-feedback"><%= errors.email && errors.email %></div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter Strong Password</label>
                        <input type="password" name="password" id="password"
                               class="form-control <%= errors.password && 'is-invalid' %>"
                        >
                        <div class="invalid-feedback"><%= errors.password && errors.password %></div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Log In">
                </form>
                <div class="pt-3 text-center">
                    <span>Don't have any Account ? </span> <a href="/auth/signUp">Create Here</a>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../../partials/footer.ejs') %>

</body>
</html>
